{
  "name": "chat-app",
  "private": true,
  "workspaces": [
    "container/*"
  ],
  "scripts": {
    "client": "cd ./container/app && npm run dev ",
    "server": "cd ./container/backend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run build && cd ./container/backend && npm start",
    "build-app": "cd ./container/app && NPM_CONFIG_PRODUCTION=false npm install --legacy-peer-deps && npm run build "
  },
  "dependencies": {
    "axios": "^1.2.1",
    "concurrently": "^7.6.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@wixc3/react-board": "^2.1.3"
  }
}
