{
  "name": "chat-app",
  "private": true,
  "workspaces": [
    "container/*"
  ],
  "scripts": {
    "client": "npm run dev --prefix ./container/app",
    "server": "npm run dev --prefix ./container/backend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run build && npm start --prefix ./container/backend",
    "build": "NPM_CONFIG_PRODUCTION=false npm install --legacy-peer-deps && npm run build --prefix ./container/app"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "concurrently": "^7.6.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@wixc3/react-board": "^2.1.3"
  }
}
